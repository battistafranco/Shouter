<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shouter</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Custom")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/sweet-alert.css" rel="stylesheet" />
    <script src="~/Scripts/sweet-alert.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Wall", "Comments")'>
                    <img src='@Url.Content("~/Content/Img/Shouter.png")' />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="margin-left:1em;">
                    <li>@Html.ActionLink("Wall", "Wall", "Comments")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                <table style="float:right; text-align:center">
                    <tr>
                        <td><label id="lblLogin" style="margin-top: 1em; color:ActiveCaption; float:left">Hi! @Session["email"]</label></td>
                        <td>
                            <a href="@Url.Action("LogOut", "Home")" onclick="OpenSweetAlert()" title="LogOut" style="margin-left: 1em;float:right; margin-top: 1em;">
                                <i class="glyphicon glyphicon-log-out"></i>
                            </a>
                        </td>
                    </tr>
                </table>
                @*<div>
                    <label id="lblLogin" style="margin-top: 1em; color:ActiveCaption; float:right">Hi! @Session["email"]</label>
                </div>
                <div>
                    <a href="@Url.Action("LogOut", "Home")" onclick="OpenSweetAlert()" title="LogOut" style="margin-top: 1em; float:right">
                        <i class="glyphicon glyphicon-log-out"></i>
                    </a>
                </div>*@
            </div>


        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Shouter by Franco Battista</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>


    function OpenSweetAlert() {


        event.preventDefault();

        swal({
            title: "¿Are you leaving us?",
            text: "¿Do you want to Log Out?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Yes, i'm leaving..",
            cancelButtonText: "No..",
            closeOnConfirm: false,
            allowOutsideClick: true
        }, function (isConfirm) {
            if (isConfirm) {
                window.location = '@Url.Action("LogOut", "Home")';

            }

        });
    }




</script>