@model UI.Web.ViewModels.LogOnViewModel


@{
    Layout = "~/Views/Shared/_LayoutVacio.cshtml";
    ViewBag.Title = "Log On";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="col-md-4"></div>
<div class="col-md-4" style="margin: 0 auto;">
    <div style="margin: 0 auto; text-align:center;">
        <img src="~/Content/Img/Logo.png" alt="" style="max-width: 320px" />
    </div>
    @using (Html.BeginForm())
    {
        <div class="form-group div-login-form">
            <table style="margin: 0 auto;">
                <tr>
                    <td>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>

                            </span>
                            @Html.TextBoxFor(m => m.Email, new
                                {
                                    @class = "form-control",
                                    autofocus = "",
                                    type = "email",
                                    required ="required",
                                    placeholder = @Html.DisplayNameFor(m => m.Email)
                                })
                            @*<input class="form-control" name="email" type="email" />*@
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">

                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Password, new
                                {
                                    @class = "form-control",
                                    autofocus = "",
                                    required = "required",
                                    type = "password",
                                    placeholder = @Html.DisplayNameFor(m => m.Password)
                                })
                                @*<input class="form-control" name="password" type="password" />*@
                            </div>

                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-default button-login">
                                Log On
                                <i class="glyphicon glyphicon-chevron-right"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            </table>






        </div>
    }


</div>

<div class="col-md-4"></div>
@section AdditionalMeta{
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Custom/customcss")
    @Scripts.Render("~/Scripts/modernizr")
}

@section Scripts {
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @Scripts.Render("~/Scripts/jqueryval")
}